{
    "supervision": {
        "check_intervals": [60, 300, 900, 3600],
        "metrics": [
            "cpu_usage",
            "memory_usage",
            "disk_io",
            "network_latency",
            "response_time",
            "error_rate",
            "throughput"
        ],
        "thresholds": {
            "cpu_usage": {
                "warning": 75,
                "critical": 90
            },
            "memory_usage": {
                "warning": 80,
                "critical": 95
            },
            "disk_io": {
                "warning": 70,
                "critical": 85
            },
            "network_latency": {
                "warning": 100,
                "critical": 200
            },
            "response_time": {
                "warning": 500,
                "critical": 1000
            },
            "error_rate": {
                "warning": 1,
                "critical": 5
            },
            "throughput": {
                "warning": 1000,
                "critical": 500
            }
        }
    },
    "load_testing": {
        "scenarios": [
            {
                "name": "baseline",
                "users": 10,
                "duration": 3600,
                "ramp_up": 300
            },
            {
                "name": "stress",
                "users": 100,
                "duration": 7200,
                "ramp_up": 600
            },
            {
                "name": "endurance",
                "users": 50,
                "duration": 86400,
                "ramp_up": 1800
            }
        ],
        "thresholds": {
            "response_time_p95": 1000,
            "error_rate_max": 1,
            "throughput_min": 100
        }
    },
    "validation_matrix": {
        "test_types": [
            "unit",
            "integration",
            "system",
            "performance",
            "security"
        ],
        "environments": [
            "development",
            "staging",
            "production"
        ],
        "required_coverage": {
            "unit": 90,
            "integration": 85,
            "system": 80,
            "performance": 75,
            "security": 95
        }
    },
    "message_delivery": {
        "protocols": [
            "http",
            "mqtt",
            "websocket",
            "grpc"
        ],
        "retry_policy": {
            "max_attempts": 3,
            "initial_delay": 1,
            "max_delay": 5,
            "multiplier": 2
        },
        "validation": {
            "timeout": 30,
            "required_ack": true,
            "verify_order": true,
            "verify_content": true
        }
    },
    "optimization_metrics": {
        "baseline": {
            "response_time": 100,
            "throughput": 1000,
            "resource_usage": {
                "cpu": 50,
                "memory": 1024,
                "disk": 100
            }
        },
        "targets": {
            "response_time_reduction": 10,
            "throughput_increase": 15,
            "resource_usage_reduction": 20
        }
    }
} 