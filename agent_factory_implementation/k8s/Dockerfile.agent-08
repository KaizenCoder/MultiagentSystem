# Dockerfile pour Agent 08 - performance-optimizer
# Image de base Python optimisée
FROM python:3.11-slim

# Métadonnées
LABEL maintainer="Agent Factory Team"
LABEL version="1.0"
LABEL description="Agent 08 - performance-optimizer"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV AGENT_ID=08
ENV AGENT_PORT=8008

# Installation des dépendances système
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Création utilisateur non-root
RUN useradd --create-home --shell /bin/bash agent
WORKDIR /app
RUN chown agent:agent /app

# Installation des dépendances Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copie du code agent
COPY agents/real_agent_08_*.py ./
COPY code_expert/ ./code_expert/
COPY config/ ./config/

# Permissions
RUN chown -R agent:agent /app
USER agent

# Port d'exposition
EXPOSE 8008

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8008/health || exit 1

# Point d'entrée
CMD ["python", "real_agent_08_*.py"]
