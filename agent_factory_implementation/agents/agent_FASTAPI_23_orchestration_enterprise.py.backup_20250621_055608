    self.status = "stopped"
    logger.info(f"âœ… Agent 23 {self.agent_name} arrÃªtÃ© proprement")
    
    async def health_check(self) -> Dict[str, Any]:
        """ğŸ©º VÃ©rification santÃ© Agent 23 Enterprise"""
    return {
